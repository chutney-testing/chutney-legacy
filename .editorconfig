# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.{diff,md}]
trim_trailing_whitespace = false
max_line_length = off

[*.{yaml,yml,gradle}]
indent_size = 2

[*.ts]
quote_type = single
