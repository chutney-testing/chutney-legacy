{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "paths": {
            "@env/*": [
                "src/environments/*"
            ],
            "@core/*": [
                "src/app/core/*"
            ],
            "@model": [
                "src/app/core/model/index"
            ],
            "@shared": [
                "src/app/shared/index"
            ],
            "@shared/*": [
                "src/app/shared/*"
            ],
            "@modules/*": [
                "src/app/modules/*"
            ],
            "os": [
                "node_modules/os-browserify/main.js"
            ]
        }
    }
}
