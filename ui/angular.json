{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "chutney": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "chutney",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/chutney",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.chutney.json",
            "assets": [
              "src/assets",
              "src/manifest.json",
              "src/favicon.ico"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/assets/style"
              ]
            },
            "styles": [
              "src/assets/style/style.scss",
                {
                    "input": "src/assets/style/themes/theme.flatly.scss",
                    "bundleName": "flatly",
                    "inject": true
                },
                {
                    "input": "src/assets/style/themes/theme.darkly.scss",
                    "bundleName": "darkly",
                    "inject": false
                }
            ],
            "scripts": [
                "node_modules/@asciidoctor/core/dist/browser/asciidoctor.min.js",
                "node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "chutney:build",
              "proxyConfig": "proxy.conf.json",
              "ssl": true
          },
          "configurations": {
            "production": {
              "browserTarget": "chutney:build:production"
            },
            "development": {
              "browserTarget": "chutney:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "chutney:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "karmaConfig": "src/karma.conf.js",
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/assets/style"
              ]
            },
            "styles": [
              "src/assets/style/style.scss"
            ],
            "scripts": [
              "node_modules/@asciidoctor/core/dist/browser/asciidoctor.min.js"
            ],
            "assets": [
              "src/assets",
              "src/manifest.json",
              "src/favicon.ico"
            ]
          }
        },
          "storybook": {
              "builder": "@storybook/angular:start-storybook",
              "options": {
                  "browserTarget": "chutney:build",
                  "port": 6006,
                  "styles": [
                      "src/assets/style/style.scss",
                      "src/assets/style/themes/theme.flatly.scss"
                  ]
              }
          },
          "storybook-darkly": {
              "builder": "@storybook/angular:start-storybook",
              "options": {
                  "browserTarget": "chutney:build",
                  "port": 6007,
                  "styles": [
                      "src/assets/style/style.scss",
                      "src/assets/style/themes/theme.darkly.scss"
                  ]
              }
          },
          "build-storybook": {
              "builder": "@storybook/angular:build-storybook",
              "options": {
                  "browserTarget": "chutney:build"
              }
          }
      }
    }
  },
  "defaultProject": "chutney"
}
