{
    "scenario": {
        "name": "Test iterations",
        "steps": [
            {
                "name": "Given a list of environment and users",
                "type": "context-put",
                "inputs": {
                    "entries": {
                        "environments": [
                            {
                                "env": "A",
                                "user": "Tata"
                            },
                            {
                                "env": "B",
                                "user": "Baba"
                            }
                        ],
                        "env": "fixEnv"
                    }
                }
            },
            {
                "name": "<index> - Hello website on ${#env} with user ${#user}",
                "type": "complex",
                "inputs": {
                    "stringParam": "/${#env}/${#user}"
                },
                "outputs": {
                    "pouet_<index>": "${\"/\" + #env + \"/\" + #user + \"/<index>\"}"
                },
                "validations" : {
                    "env_ok": "${#env == \"A\" || #env == \"B\"}",
                    "pouet_<index>_ok": "${#pouet_<index> == \"/\" + #env + \"/\" + #user + \"/<index>\"}"
                },
                "strategy": {
                    "type": "for",
                    "parameters": {
                        "dataset": "${#environments}"
                    }
                }
            },
            {
                "name": "Scenario Context is not altered by iterations",
                "type": "success",
                "validations" : {
                    "env_ok": "${#env == \"fixEnv\"}"
                }
            }
        ]
    }
}
